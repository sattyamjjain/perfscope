# Include the README and config files
include README.md
include pyproject.toml

# Include type information
include src/perfscope/py.typed

# Include documentation
recursive-include docs *
include docs/*

# Include examples
recursive-include examples *
include examples/*

# Include test files (for source distributions)
recursive-include tests *
include tests/*

# Include configuration files
include Makefile
include requirements.txt
include .gitignore

# Include CI/CD configuration
include .github/workflows/*
include .github/ISSUE_TEMPLATE/*
include .github/PULL_REQUEST_TEMPLATE.md
include .github/CODEOWNERS
include .github/FUNDING.yml

# Include development configuration
include .pre-commit-config.yaml
include tox.ini

# Exclude development files from distribution
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude *.egg-info
global-exclude build
global-exclude dist
